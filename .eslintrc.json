{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules",
    "*-lock.json",
    "dist",
    "components",
    "nevermind",
    "public"
  ],
  "rules": {
    "no-unused-vars": 2,
    "non-null assertion": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/strict-boolean-expressions": 0
  },
  "settings": {}
}
