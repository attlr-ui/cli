{
  "name": "attlr",
  "version": "1.0.22",
  "description": "React Native UI Components by Matthew Msingathi (Coded Design)",
  "main": "src/index.ts",
  "private": false,
  "files": [
    "src/**/*"
  ],
  "bin": {
    "attlr": "./dist/index.js"
  },
  "scripts": {
    "lint": "tsc",
    "dev": "tsup src/index.ts --watch --format cjs --out-dir dist",
    "build": "tsup src/index.ts --minify --format cjs --out-dir dist",
    "ci": "npm run lint && npm run build",
    "release": "npm run ci && changeset publish"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "native"
  ],
  "author": "Matthew Msingathi",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.21",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}